{
  "_comment": "Archivo de ejemplo. Copie a config.json. GEMINI_API_KEY puede definirse por entorno.",
  "gemini": {
    "api_key": "",
    "model": "gemini-1.5-pro",
    "temperature": 0.1,
    "max_tokens": 4096
  },
  "tcia": {
    "base_url": "https://services.cancerimagingarchive.net/nbia-api/services/v1",
    "collections_url": "https://www.cancerimagingarchive.net/wp-json/wp/v2/collections",
    "download_path": "./data/raw",
    "supported_formats": ["DICOM", "NIfTI", "ANALYZE"]
  },
  "data": {
    "target_collections": [],
    "image_size": [224, 224],
    "batch_size": 32,
    "train_test_split": 0.8,
    "validation_split": 0.2
  },
  "model": {
    "early_detection": {
      "architecture": "ResNet50",
      "input_shape": [224, 224, 3],
      "num_classes": 2,
      "learning_rate": 0.001,
      "epochs": 50,
      "patience": 10
    },
    "multiclass_detection": {
      "architecture": "EfficientNetB0",
      "input_shape": [224, 224, 3],
      "num_classes": 5,
      "learning_rate": 0.0001,
      "epochs": 100,
      "patience": 15
    }
  },
  "radiomics": {
    "feature_classes": ["firstorder", "glcm", "glrlm", "glszm", "gldm", "ngtdm", "shape"],
    "bin_width": 25,
    "normalize": true,
    "resample_pixel_spacing": [1, 1, 1]
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "file": "./logs/cancer_analysis.log"
  }
}